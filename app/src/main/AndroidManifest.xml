<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.hellojammu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TemplesActivity"
            android:label="@string/category_temples"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".HistoricalPlacesActivity"
            android:label="@string/category_historical_places"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".RestaurantsActivity"
            android:label="@string/category_restaurant"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".HotelsActivity"
            android:label="@string/category_hotels"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>